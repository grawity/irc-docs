# +--------------------------------------------------------------------------+
# | Parse all files offered                                                  |
# +--------------------------------------------------------------------------+
alias dccrequest {
      @ DCCFILE = [$X_FILE($1)]
      if ([$AUTOGET] == [ON])
         { dcc get $0 $DCCFILE
           xdccecho Autogetting $DCCFILE from $0 }
         { if ([$AUTOCLOSE] == [ON])
              { xdccecho DCC SEND $DCCFILE from $0 request ignored.
                dcc close get $0 }
              { xdccecho DCC SEND $DCCFILE from $0 added to request list
                adddccrequest $DCCFILE $0 } }
}
