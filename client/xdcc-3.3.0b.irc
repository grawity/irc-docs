alias getdir {
      @ FILECOUNT = 0
      ^on -exec_error "DIR1 *" {
           echo [XDCC] Error: $1- }
      ^on ^exec "DIR1 *" addfile $$1-
      @ COUNT4 = 0
      while (word($COUNT4 $TMPVAR))
            { @ TMPFILE = word($COUNT4 $TMPVAR)
              if ([$[1]TMPFILE] == [/])
                 {}
                 { @ TMPFILE = [$W/$TMPFILE] }
              ^exec -name DIR1 ls -ld $TMPFILE
              ^wait %DIR1
              @ COUNT4 = COUNT4 + 1 }
      if ( FILECOUNT == 0 )
         { @ function_return = [ERROR] }
         { @ function_return = [OK] }
}
