alias SECmcommand {
      if ([$0])
         { if (match($0 LOAD NADD ADD NREMOVE REMOVE LIST))
              { SEC$0 $1- }
              { echo [XDCC] $0 is not a valid SECURITY command. } }
         { if ([$SECURITYFLAG] == [ON])
              { @ SECURITYFLAG = [OFF] }
              { @ SECURITYFLAG = [ON] }
           echo [XDCC] SECURITY: $SECURITYFLAG
           change_statusline }
}
